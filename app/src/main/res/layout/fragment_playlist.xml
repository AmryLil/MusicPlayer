<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".submenuFragment.playlist">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"

                android:id="@+id/search_bar">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logo"
                    />
                <TextView
                    android:id="@+id/anu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/logo"
                    android:gravity="center"
                    android:textColor="#37C59C"
                    android:layout_marginHorizontal="79dp"
                    android:layout_centerVertical="true"
                    android:text="Playlist"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp"/>
                <ImageView
                    android:id="@+id/list"
                    android:layout_toEndOf="@id/anu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="#37C59C"
                    android:layout_centerVertical="true"
                    android:src="@drawable/playlist"
                    />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_bar"


            >
            <EditText
                android:id="@+id/seacrh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:background="@drawable/search_custom"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:hint="Search..."
                style="@style/searchcolor"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:textColorHint="#808080" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/seacrh"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="@style/iconColor"
                android:src="@drawable/baseline_search_24"/>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>